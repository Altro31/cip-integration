{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": "../../../node_modules/@repo/swc-config/.swcrc"
      }
    },
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger"
    ]
  }
}